<UserControl x:Class="RPG.SpriteCanvas"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:RPG"
             mc:Ignorable="d" 
             d:DesignHeight="48" d:DesignWidth="31">
    <Grid ClipToBounds="True">
        <Canvas x:Name="SpritesCanvas" HorizontalAlignment="Left" Height="48" Margin="0,0,0,0" VerticalAlignment="Top" Width="31">
            <Image x:Name="SpriteSheet" Height="192" Width="128" Source="Resources/char12.png" Canvas.Left="0"/>
        </Canvas>
    </Grid>
</UserControl>
